{% extends 'layout.html.twig' %}

{% block title %} Annonces {% endblock %}
{% block content %}
    {% block search %}{% include 'Annonce/search.html.twig' %}{% endblock %}
    <!-- Announces start -->
    <div class="row justify-content-center AnnounceResponse">
        {% for announce in announces %}
            <div class="card col-md-3 offset-1 cardAnnounce">
                <img class="card-img-top" src="/uploads/{{ announce.img }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ announce.title }}</h5>
                    <br>
                    <div class="row">
                        <p class="card-text">Ville : {{ announce.city }}</p>
                    </div>
                    <div class="row">
                        <p class="card-text">Capacité : {{ announce.capacity }} personnes</p>
                    </div>
                    <div class="row">
                        <p class="card-text">Type de bien : {{ announce.good }}</p>
                    </div>
                    <div class="row">
                        <p class="card-text">Ce bien est fait pour : {{ announce.activity }}</p>
                    </div>
                    <br>
                    <div class="row justify-content-end">
                        <p class="card-text">Prix : {{ announce.price }} € TTC</p>
                    </div>
                    <br>
                    <div class="row justify-content-center buttonBG">
                        <a class="textButtonBG" href="/announce/showAnnounce/{{ announce.id }}"
                           role="button">Voir
                            l'annonce</a>
                    </div>
                </div>
            </div>
        {% else %}
            <h3>Il n'existe pas d'annonce qui pourrait correspondre à vos choix, vous pouvez repasser plus tard !</h3>
        {% endfor %}
    </div>

{% endblock %}
